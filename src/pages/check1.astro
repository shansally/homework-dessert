---
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import Checkorder from "../components/Checkorder.astro";
import Timeline from "../components/Timeline.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>dessert</title>

    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,500,0,0"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
    />
  </head>
  <Nav />
  <!--運送 -->

  <div class="col-span-12 lg:col-span-6 lg:flex lg:justify-center lg:my-4">
    <div class="w-full text-Mycolor-lightgreen lg:px-8 lg:w-[45%]">
      <div class="p-6 flex items-center justify-between bg-Mycolor-green">
        <h2 class="text-4xl font-semibold">運送</h2>
        <Timeline
          span1="material-symbols-outlined"
          circle1="radio_button_checked"
          span2="material-symbols-outlined"
          circle2="circle"
          span3="material-symbols-outlined"
          circle3="circle"
        />
      </div>
      <form class="text-Mycolor-lightgreen bg-Mycolor-green text-xl gap-4 p-6">
        <div>
          <div class="flex gap-x-2">
            <label for=" lastname" class="w-[50%] mb-6 justify-between">
              <p class="mb-2">姓氏</p>
              <input
                type="text"
                id="lastname"
                placeholder="王"
                class="mt-1.75 block pl-4 h-14 w-full"
              />
            </label>

            <label for="name" class="w-[50%] mb-6">
              <p class="mb-2">名字</p>
              <input
                type="text"
                id="name"
                placeholder="小明"
                class="mt-1.75 block pl-4 h-14 w-full"
              />
            </label>
          </div>
          <label for="tel" class="mb-6">
            <p class="mb-2">電話</p>
            <input
              type="tel"
              id="tel"
              placeholder="0912-345-678"
              class="mb-3.5 mt-1.75 block h-14 pl-4 w-full"
            />
          </label>
          <label class="mt-1.75 flex gap-4"><p class="my-2">地址</p></label>
          <div class="relative w-full flex justify-between">
            <select name="address" class="h-14 pl-4 w-[49%]">
              <option value="khh">高雄市</option>
              <option value="pei">台北市</option>
              <option value="chung">台中市</option>
              <option value="nan">台南市</option>
            </select>
            <select name="address" class="h-14 pl-4 w-[49%]">
              <option value="xx">新興區</option>
              <option value="ly">苓雅區</option>
              <option value="sm">三民區</option>
              <option value="gs">岡山區</option>
            </select>
          </div>
          <div class="pt-2 pb-6">
            <input
              type="text"
              placeholder="幸福路520號"
              class="block h-14 pl-4 w-full"
            />
          </div>
        </div>
      </form>
      <a
        href="http://localhost:4322/check2"
        class="flex justify-center items-center bg-Mycolor-yellow text-Mycolor-green font-semibold text-2xl h-16"
      >
        下一步
      </a>
    </div>
    <!--訂單摘要 -->
    <div class="hidden lg:col-span-4 lg:block lg:w-[25%]">
      <Checkorder /><!--插入訂單＆購物清單 -->
    </div>
  </div>
  <Footer />


</html>
