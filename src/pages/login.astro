---
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import Login from "../components/Login.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>dessert</title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
    />
  </head>
  <body>
    <Nav />
    <div
      class="flex justify-center items-center bg-Mycolor-green text-Mycolor-lightgreen font-semibold text-3xl h-24"
    >
      會員登入
    </div>
    <div
      class="flex justify-center items-center bg-Mycolor-lightgreen border px-6 py-8"
    >
      <ul class="w-full flex">
        <Login img="./imge/ic-facebook-logotype.svg" />
        <Login img="./imge/ic-google.svg" />
        <Login img="./imge/ic-yahoo.svg" />
      </ul>
    </div>
    <!--信箱密碼 -->
    <div class="flex flex-col items-center bg-Mycolor-green">
      <div class="flex flex-col items-center pb-6 pt-6 w-full">
        <!-------圖片須改 -->
        <div class="relative mb-3">
          <span
            class="material-symbols-outlined absolute left-5 top-4 text-2xl leading-6"
            >account_circle
          </span>
          <input
            type="text"
            placeholder="電子信箱/手機號碼"
            class="bg-Mycolor-lightgreen h-14 w-full pl-16"
          />
        </div>
        <div>
          <input
            type="password"
            placeholder="請輸入使用者密碼"
            class="bg-Mycolor-lightgreen h-14 w-full pl-16"
          />
        </div>
        <label for="check" class="flex items-center">
          <input type="checkbox" id="check" class="h-4 w-4" />
          <p class="text-base text-Mycolor-lightgreen font-semibold">記住我</p>
        </label>
      </div>
    </div>
    <div
      class="flex justify-center items-center bg-Mycolor-yellow text-Mycolor-green font-semibold text-2xl h-16"
    >
      登入帳號
    </div>
    <Footer />
  </body>
</html>
